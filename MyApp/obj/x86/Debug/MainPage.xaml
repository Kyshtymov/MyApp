<Page
    x:Class="MyApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="0,0,0,0" RenderTransformOrigin="0.491,0.481">
            <TextBox x:ConnectionId='1' Name="Input_Amount" Width="290" HorizontalAlignment="Left"></TextBox>
            <TextBox x:ConnectionId='2' Name="Input_Category" Width="290" HorizontalAlignment="Left"></TextBox>
            <Button x:ConnectionId='3'                    Width="292" Height="30">Income</Button>
            <Button x:ConnectionId='4'                     Width="292" Height="30">Outcome</Button>
            <TextBox x:ConnectionId='5' Name="Delete_ID" Width="290" HorizontalAlignment="Left"></TextBox>
            <Button x:ConnectionId='6'                    Width="292" Height="30">Remove ID</Button>
            <Button x:ConnectionId='7'                       Width="292" Height="30">RemoveTable</Button>
            <ToggleSwitch x:ConnectionId='8' x:Name = "ToggleSwitch" Width="291" Height="62" Header="History of operation" IsOn="False" OffContent="Hide" OnContent="Show"
                                            />
            <TextBlock x:ConnectionId='9' Name="Sum_Box" Text="{Binding}" Width="290" TextAlignment="Left" HorizontalAlignment="Left"></TextBlock>
            <ListView x:ConnectionId='10' Visibility="Collapsed" x:Name="Output" Height="448" Width="290" HorizontalAlignment="Left" UseLayoutRounding="False" d:LayoutRounding="Auto">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>

